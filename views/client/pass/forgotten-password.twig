{% extends 'layouts/layout.twig' %}

{% block title %}
    <title>{{ constant('SITE_NAME') }} - Récupération de compte</title>
{% endblock %}

{% block body_class %} class="home min-vh-100"{% endblock %}

{% block content %}
    <main class="pt-5 pb-5">
        <section class="container-fluid col-md-8 justify-content-center mt-5 mb-5">
                <h1>Récupération de compte</h1>
                <h3>Ce processus nous permet de vérifier que le compte vous appartient</h3>
        </section>
        <section class="container-fluid mt-5 mb-5 pt-5 col-11 col-sm-8 col-md-6 col-lg-4">
            <form {% autoescape %}action="{{ constant('SITE_ADRESS') }}/membres/resetPasswordEnquiry"{% endautoescape %} method="POST" class="form-dark">
                <div class="mb-3">
                <label for="email" class="form-label">Votre adresse email</label>
                <input type="email" class="form-control" id="email" aria-describedby="email" name="email">
                </div>
                <div class="mb-3 form-check">
                <input type="checkbox" class="form-check-input" id="notRobot">
                <label class="form-check-label" for="notRobot">Je ne suis pas un robot</label>
                </div>
                <button type="submit" class="btn btn-success mt-5 mb-5">Envoyer</button>
            </form>
        </section>
    </main>    
{% endblock %}