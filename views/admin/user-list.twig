{% extends 'layouts/layout.twig' %}

{% block content %}
<div class="container-fluid">
    <div class="row flex-nowrap">
        {% include 'layouts/admin-menu.twig' %}
        <main class="col py-3">
                <div class="container mt-5">
                    <h1 class="h3 pb-5">Membres</h1>
                    <div class="card shadow mb-5">
                        <div class="card-header py-3">
                            <ul class="m-0 nav nav-tabs">
                                {% autoescape %}
                                    <li class="nav-item">
                                    <a class=" nav-link {{ valid }}" aria-current="page" href="{{ constant('SITE_ADRESS') }}/adminUser/liste/{{ CSRF }}"><h6 class="fw-bolder text-primary">Validés</h6></a>
                                    </li>
                                    <li class="nav-item">
                                        <a class=" nav-link {{ pending }}" aria-current="page" href="{{ constant('SITE_ADRESS') }}/adminUser/pending/{{ CSRF }}"><h6 class="fw-bolder text-primary">En attente de validation</h6></a>
                                    </li>                                    
                                {% endautoescape %}
                            </ul>
                            {% if valid is defined %}
                                <div class="alert alert-light">
                                    <table class="table table-striped table-sm">
                                        <thead>
                                        <tr>
                                            <th scope="col">#</th>
                                            <th scope="col" class="d-none d-lg-table-cell">prénom</th>
                                            <th scope="col" class="d-none d-lg-table-cell">nom</th>
                                            <th scope="col">pseudo</th>
                                            <th scope="col" class="d-none d-xl-table-cell">e-mail</th>
                                            <th scope="col" class="d-none d-sm-table-cell">depuis</th>
                                            <th scope="col" class="d-none d-md-table-cell">status</th>
                                            <th scope="col" class="text-center">action</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                            {% for user in users %}
                                                <tr>
                                                    <th scope="row">{{ user.serial }}</th>
                                                    <td class="d-none d-lg-table-cell">{{ user.first_name }}</td>
                                                    <td class="d-none d-lg-table-cell">{{ user.last_name }}</td>
                                                    <td>{{ user.pseudo }}</td>
                                                    <td class="d-none d-xl-table-cell">{{ user.email }}</td>
                                                    <td class="d-none d-sm-table-cell">{{ user.since}}</td>
                                                    {% if user.status == 'active' %}
                                                        <td class="d-none d-md-table-cell">actif</td>
                                                        <td class="text-center">
                                                            {% autoescape %}
                                                                <a href="{{ constant('SITE_ADRESS') }}/adminUser/suspend/{{ user.serial }}/{{ CSRF }}"><button class="btn btn-outline-danger btn-sm"  style="width: 105px;">suspendre</button></a>                                                    
                                                            {% endautoescape %}
                                                        </td>
                                                    {% elseif user.status ==  'suspended' %}
                                                        <td class="d-none d-md-table-cell">suspendu</td>
                                                        <td class="text-center">
                                                            {% autoescape %}
                                                                <a href="{{ constant('SITE_ADRESS') }}/adminUser/valid/{{ user.serial }}/{{ CSRF }}"><button class="btn btn-outline-success  btn-sm"  style="width: 105px;">activer</button></a>                                                    
                                                            {% endautoescape %}
                                                        </td>
                                                    {% endif %}
                                                </tr>
                                            {% endfor %}
                                    
                                        </tbody>
                                    </table>
                                </div>
                            {% endif %}
                            {% if pending is defined %}
                                <div class="alert alert-light">
                                    <table class="table table-striped table-sm">
                                        <thead>
                                        <tr>
                                            <th scope="col">#</th>
                                            <th scope="col" class="d-none d-lg-table-cell">prénom</th>
                                            <th scope="col" class="d-none d-lg-table-cell">nom</th>
                                            <th scope="col">pseudo</th>
                                            <th scope="col" class="d-none d-xl-table-cell">e-mail</th>
                                            <th scope="col" class="d-none d-sm-table-cell">depuis</th>
                                            <th scope="col" class="text-center">action</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                            {% for user in users %}
                                                <tr>
                                                    <th scope="row">{{ user.serial }}</th>
                                                    <td class="d-none d-lg-table-cell">{{ user.first_name }}</td>
                                                    <td class="d-none d-lg-table-cell">{{ user.last_name }}</td>
                                                    <td>{{ user.pseudo }}</td>
                                                    <td class="d-none d-xl-table-cell">{{ user.email }}</td>
                                                    <td class="d-none d-sm-table-cell">{{ user.since}}</td>
                                                    <td class="text-center">
                                                            {% autoescape %}
                                                                <a href="{{ constant('SITE_ADRESS') }}/adminUser/suspend/{{ user.serial }}/{{ CSRF }}"><button class="btn btn-outline-danger btn-sm"  style="width: 105px;">supprimer</button></a>                                                    
                                                            {% endautoescape %}
                                                    </td>
                                                </tr>
                                            {% endfor %}
                                    
                                        </tbody>
                                    </table>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>
{% endblock %}