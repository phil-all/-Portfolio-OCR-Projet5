{% extends 'layouts/layout.twig' %}

{% block content %}
<div class="container-fluid">
    <div class="row flex-nowrap">
        {% include 'layouts/admin-menu.twig' %}
        <main class="col py-3">
            <div class="container-fluid container-md p-5">
                <h1>Nouvel article</h1>
                <form enctype="multipart/form-data" {% autoescape %}action="{{ constant('SITE_ADRESS') }}/adminArticles/post/{{ CSRF }}"{% endautoescape %} method="POST" class="row g-3">
                    <div class="col-12">
                        <label for="title" class="form-label">Titre</label>
                        <input type="text" class="form-control shadow" id="title" name="title">
                    </div>
                    <div class="col-12">
                        <label for="chapo" class="form-label">Chapo</label>
                        <input type="text" class="form-control shadow" id="chapo" name="chapo">
                    </div>
                    <div class="col-12">
                        <label for="category" class="form-label">Catégorie</label>
                        <select class="form-select" aria-label="article category" name="category" id="category">
                            {% for category in categories %}
                                {% autoescape %}
                                    <option value="{{ category.id }}">{{ category.category }}</option>
                                {% endautoescape %}
                            {% endfor %}
                          </select>
                    </div>
                    <div class="col-12">
                        <label for="file">Image</label>
                        <input type="file" class="form-control shadow" name="image" id="file" accept="image/jpeg">
                    </div>
                    <div class="d-flex flex-row align-items-start">
                        <textarea name="content" class="form-control shadow textarea" placeholder="rédigez votre article..." style="height: 300px"></textarea>
                    </div>
                    <div class="col-12">
                        <button type="submit" class="btn btn-primary">Valider</button>
                    </div>
                </form>
            </div>
        </main>
    </div>
</div>  
{% endblock %}